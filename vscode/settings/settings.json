    "Broadphase",
    "cdotss",
    "Christoffel",
    "columnseprule",
    "Darboux",
    "debugbar",
    "defi",
    "documentclass",
    "ensuremath",
    "espanso",
    "esssup",
    "fancyhdr",
    "fancypagestyle",
    "figurename",
    "figurenameref",
    "fleqn",
    "forall",
    "GLTF",
    "graphicspath",
    "graphicx",
    "headrulewidth",
    "hhhhhos",
    "hhhhos",
    "hhhos",
    "hoge",
    "huga",
    "includegraphics",
    "innper",
    "innter",
    "intelephense",
    "laravel",
    "lder",
    "lemm",
    "leqno",
    "Lipschitz",
    "longtable",
    "lstlistingname",
    "lstlistingnameref",
    "ltjsarticle",
    "maketitle",
    "Matcap",
    "mathrm",
    "mathrsfs",
    "Metalness",
    "mondai",
    "multicol",
    "multirow",
    "nccmath",
    "newcommand",
    "newcounter",
    "newpage",
    "newtheorem",
    "noindent",
    "operatorname",
    "pagebreak",
    "Parseval",
    "pdftk",
    "piyo",
    "plistings",
    "pxrubrica",
    "Raycaster",
    "rema",
    "renewcommand",
    "renshuu",
    "rubyintergap",
    "rubysetup",
    "Selberg",
    "setcounter",
    "setlength",
    "setspace",
    "setstretch",
    "Sieltjes変換のPadé近似",
    "Stieltjes",
    "subti",
    "tablename",
    "tablenameref",
    "tableofcontents",
    "textbf",
    "thebibliography",
    "theo",
    "tlcomb",
    "tlinner",
    "tlperm",
    "tocdepth",
    "usepackage"
  ],
  // [ liveServer　]
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  // [NeoVim]
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.vim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // [Markdown Preview]
  "markdown.styles": ["Style.css"],
  "markdown-preview-github-styles.colorTheme": "dark",
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "markdown-preview-enhanced.hideDefaultVSCodeMarkdownPreviewButtons": false,
  // [marp]
  "markdown.marp.themes": ["./marp-themes/Style.css"],
  // [todo-tree]
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "NOTE"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "gutterIcon": true
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "foreground": "#32CD32",
      "iconColour": "#32CD32"
    },
    "FIXME": {
      "icon": "flame",
      "foreground": "#EE4B2B",
      "iconColour": "#EE4B2B"
    },
    "NOTE": {
      "icon": "paintbrush",
      "foreground": "#00bfff",
      "iconColour": "#00bfff"
    },
    "CHECK": {
      "icon": "plus-circle",
      "foreground": "#F4BB44",
      "iconColour": "#F4BB44"
    },
    "BUG": {
      "icon": "bug",
      "foreground": "#FF0000",
      "iconColour": "#FF0000"
    }
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
  // [inbox]
}
